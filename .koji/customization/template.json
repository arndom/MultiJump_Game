{
  "template": {
    "showSplashScreen": true,
    "splashBackgroundColor": "",
    "splashBackgroundImage": "https://miro.medium.com/max/4800/1*UJmuNSJQ-vwETj1nE7pxJQ.png",
    "splashBackgroundImageMode": "cover",
    "splashCenteredImage": "https://www.freelogodesign.org/Content/img/logo-samples/sophia.png",
    "splashCenteredImageHeight": "30",
    "splashCenteredText": "Play Guppy Blast!",
    "splashCenteredTextColor": "#ffffff",
    "splashCenteredTextFontSize": "48",
    "playButtonBackgroundColor": "#edc526",
    "playButtonTextColor": "#1e1f1e",
    "playButtonText": "Play",
    "playButtonTextFontSize": "16"
  },
  "@@editor": [
    {
      "key": "template",
      "name": "Template Options",
      "icon": "ðŸ“‹",
      "source": "template.json",
      "fields": [
        {
          "key": "showSplashScreen",
          "name": "Splash Screen",
          "description": "Should the app show the splash screen?",
          "type": "boolean"
        },
        {
          "key": "splashBackgroundColor",
          "name": "Splash Background Color",
          "type": "color"
        },
        {
          "key": "splashBackgroundImage",
          "name": "Splash Background Image (if not provided, will use the background color by default)",
          "type": "image"
        },
        {
          "key": "splashBackgroundImageMode",
          "name": "Splash Background Image Mode (affects how the image is presented)",
          "type": "select",
          "typeOptions": {
            "placeholder": "Choose an option...",
            "options": [
              {
                "value": "cover",
                "label": "Cover"
              },
              {
                "value": "contain",
                "label": "Contain"
              },
              {
                "value": "auto",
                "label": "Auto (No Resizing)"
              }
            ]
          }
        },
        {
          "key": "splashCenteredImage",
          "name": "Splash Centered Image (if not provided, will use the splash centered text by default)",
          "type": "image"
        },
        {
          "key": "splashCenteredImageHeight",
          "name": "Splash Centered Image Height",
          "description": "Percentage of Screen Height (0 - 100)",
          "type": "range",
          "typeOptions": {
            "min": "10",
            "max": "80",
            "step": "1"
          }
        },
        {
          "key": "splashCenteredText",
          "name": "Splash Centered Text",
          "type": "text"
        },
        {
          "key": "splashCenteredTextColor",
          "name": "Splash Centered Text Color",
          "type": "text"
        },
        {
          "key": "splashCenteredTextFontSize",
          "name": "Splash Centered Text Font Size",
          "type": "range",
          "typeOptions": {
            "min": "16",
            "max": "72",
            "step": "1"
          }
        },
        {
          "key": "playButtonText",
          "name": "Play Button Text",
          "type": "text"
        },
        {
          "key": "playButtonTextFontSize",
          "name": "Play Button Text Font Size",
          "type": "range",
          "typeOptions": {
            "min": "8",
            "max": "48",
            "step": "1"
          }
        },
        {
          "key": "playButtonBackgroundColor",
          "name": "Play Button Background Color",
          "type": "color"
        },
        {
          "key": "playButtonTextColor",
          "name": "Play Button Text Color",
          "type": "color"
        }
      ]
    }
  ]
}